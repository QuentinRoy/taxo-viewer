author = {Bailly, Gilles},
keywords = {IHM,Interaction Homme-Machine,Techniques d'interaction,Techniques de menus,menus,syst{\{}{\`{e}}{\}}mes de menus},
school = {Universit{\'{e}} Joseph-Fourier - Grenoble I},
